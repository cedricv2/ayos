}

<h2>Download Data</h2>

<div class="container">
    @*Navigator*@
    <div class="row ">
        <div class="col-md-8">
            <div class="col-md-4">
                <div class="input-group input-group-sm">
                    <span class="input-group-addon" >DATE FROM: </span>
                    <input type="date" class="form-control" placeholder="Username"  aria-describedby="sizing-addon3">
                </div>
            </div>
            <div class="col-md-4">
                <div class="input-group input-group-sm">
